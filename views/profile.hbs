
<div class="uk-flex uk-flex-left">
  {{#if isCurrentUser}}
    <div class="">
      {{#if currentUser.avatar}}
      <div class="uk-margin-xlarge-left">
        <img class="uk-border-circle uk-box-shadow-xlarge uk-margin-large-left uk-margin-large-right" width='150' height='150' src="{{currentUser.avatar}}" alt="{{currentUser.username}}">
      </div>
      {{/if}}
    </div>
    <div class="uk-flex uk-flex-column uk-flex-left uk-width-1-2">
      <div class="uk-flex uk-flex-left">
        <h1 class="">{{currentUser.username}}</h1>
      </div>
      <div>
        <p class="">{{currentUser.description}}</p>
      </div>
    </div>
  {{else}}
  <div class="">
      {{#if user.avatar}}
      <div class="uk-margin-xlarge-left">
        <img class="uk-border-circle uk-box-shadow-xlarge uk-margin-large-left uk-margin-large-right" width='150' height='150' src="{{user.avatar}}" alt="{{user.username}}">
      </div>
      {{/if}}
    </div>
    <div class="uk-flex uk-flex-column uk-flex-left uk-width-1-2">
      <div class="uk-flex uk-flex-left">
        <h1 class="">{{user.username}}</h1>
      </div>
      <div>
        <p class="">{{user.description}}</p>
      </div>
    </div>
  {{/if}}
</div>

<hr>

  {{#each user.logs as |log|}}
    {{>modalCard}}
  {{/each}}

<div class="uk-child-width-1-3@m uk-grid-match uk-text-center" uk-scrollspy="target: > div; cls: uk-animation-fade; delay: 500"  uk-grid>
  {{#each user.logs as |log|}}
    {{>logCard}}
  {{/each}}  
</div>

 

