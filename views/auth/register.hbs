<h1>Register</h1>

<form action="/users/register" method="POST" class="form">

  <div class="uk-margin">
    <div class="uk-inline">
      <label for="email"></label>
      <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: mail"></span>
      <input name='email' class="uk-input uk-form-width-large" type="email" id='email' placeholder="Email" required>
    </div>
  </div>

  <div class="uk-margin">
    <div class="uk-inline">
      <label for="username"></label>
      <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: user"></span>
      <input name='username' class="uk-input uk-form-width-large" type="text" id='username' placeholder="Username"required >
    </div>
  </div>

  <div class="uk-margin">
    <div class="uk-inline">
      <label for="password"></label>
      <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
      <input name='password' class="uk-input uk-form-width-large" type="password" id='password' placeholder="Password" required>
    </div>
  </div>

  <button class="uk-button uk-button-secondary uk-margin-small uk-form-width-large">Register</button>
  
  <a href="/users/authenticate/google" uk-icon="icon: google" class="uk-button uk-margin-small uk-button-default uk-form-width-large">Register with Google   </a>
  <a href="/users/auth/facebook" uk-icon="icon: facebook" class="uk-button uk-margin-small uk-button-primary uk-form-width-large">Register with Facebook   </a>


</form>


